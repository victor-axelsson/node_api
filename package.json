{
  "name": "cms_api",
  "description": "Backend for CMS system",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "body-parser": "*",
    "cors": "*",
    "crypto": "0.0.3",
    "defaults": "^1.0.3",
    "dotenv": "^16.0.0",
    "express": "*",
    "jsonwebtoken": "^5.4.1",
    "klaw-sync": "^6.0.0",
    "mongoose": "*",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sha1": "~1.1.1"
  },
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/server.js",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "test": "jest"
  },
  "devDependencies": {
    "jest": "^27.5.1"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
